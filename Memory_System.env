# Memory System Configuration
MEMORY_ENABLED=true
MEMORY_RETENTION_DAYS=365
MAX_MEMORIES_PER_CHARACTER=1000
MEMORY_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Database (Pinecone/Milvus)
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=character-memories

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MEMORY_TTL=86400  # 24 hours

# Memory Processing
MEMORY_BATCH_SIZE=10
MEMORY_EXTRACTION_MODEL=gpt-4
EMOTIONAL_ANALYSIS_ENABLED=true
RELATIONSHIP_TRACKING_ENABLED=true
PERSONALITY_EVOLUTION_ENABLED=true

# Privacy & Security
MEMORY_ENCRYPTION_ENABLED=true
MEMORY_ANONYMIZATION=false
USER_CONENT_REQUIRED=true
DATA_RETENTION_POLICY=GDPR